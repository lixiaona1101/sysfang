<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_pop_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp15"
            android:text="选择剂型"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp18" />

        <ImageView
            android:id="@+id/iv_med_type_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp20"
            android:padding="@dimen/dp10"
            android:src="@mipmap/cancel" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/gray_dddddd" />

    <com.jiuhao.jhjk.view.MyGridView
        android:id="@+id/gv_med_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:horizontalSpacing="@dimen/dp12"
        android:numColumns="3"
        android:paddingBottom="@dimen/dp40"
        android:paddingLeft="@dimen/dp18"
        android:paddingRight="@dimen/dp18"
        android:paddingTop="@dimen/dp20"
        android:verticalSpacing="@dimen/dp12" />

</LinearLayout>