<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp70"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/dp10"
    android:paddingTop="@dimen/dp15">

    <ImageView
        android:id="@+id/iv_item_head"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp10" />

    <TextView
        android:id="@+id/tv_item_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/iv_item_head"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp5"
        android:text="姓名"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp16" />

    <TextView

        android:id="@+id/tv_item_user_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_item_head"
        android:layout_alignStart="@+id/tv_item_user_name"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:text="年龄"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp14" />

    <ImageView
        android:id="@+id/iv_item_user_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp5"
        android:layout_alignBottom="@+id/tv_item_user_name"
        android:layout_toEndOf="@+id/tv_item_user_name"
        android:src="@mipmap/man" />

    <TextView
        android:id="@+id/tv_item_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp15"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp14" />

</RelativeLayout>