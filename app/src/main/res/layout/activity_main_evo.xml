<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back_f2"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp35"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/description"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp15"
                    android:text="病症简述"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_symptom"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp45"
                    android:background="@color/white"
                    android:completionThreshold="1"
                    android:dropDownHeight="@dimen/dp200"
                    android:hint="请输入病症描述"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp20"
                    android:paddingTop="@dimen/dp17"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/medical"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp15"
                    android:text="药方信息"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/dp10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp23"
                        android:paddingTop="@dimen/dp17"
                        android:text="处方剂型:"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/tv_select_med_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@mipmap/right"
                        android:gravity="end"
                        android:text="选择处方剂型"
                        android:textColor="@color/yellow_d49e6a"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@color/gray_dddddd" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/dp23"
                    android:paddingTop="@dimen/dp14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_med_desc"
                        android:text="药方: 共"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:id="@+id/medicine_type_number"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:text="味、"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:id="@+id/medicine_weight"
                        android:text="0"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:text="克、"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:id="@+id/weight_price"
                        android:text="0.00"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                    <TextView
                        android:text="元"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_select_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@mipmap/right"
                    android:gravity="end"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp13"
                    android:text="添加药品"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@color/gray_dddddd" />
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/mgv_selected_med"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp20"
                    android:paddingLeft="@dimen/dp22" />

                <LinearLayout
                    android:id="@+id/ll_working"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingLeft="@dimen/dp23"
                            android:paddingTop="@dimen/dp10"
                            android:text="加工辅料："
                            android:textColor="@color/text_black"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_select_working"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp10"
                            android:drawablePadding="@dimen/dp10"
                            android:drawableRight="@mipmap/right"
                            android:paddingBottom="@dimen/dp10"
                            android:paddingTop="@dimen/dp10"
                            android:text="请选择"
                            android:textColor="@color/yellow_d49e6a"
                            android:textSize="@dimen/sp16"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <android.support.v7.widget.RecyclerView
                        android:visibility="visible"
                        android:id="@+id/word_info_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/meth"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:paddingTop="@dimen/dp15"
                    android:text="服药方式"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingLeft="@dimen/dp23"
                        android:paddingTop="@dimen/dp17"
                        android:text="付数:"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <com.jiuhao.jhjk.view.AmountView
                        android:id="@+id/av_num"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        app:btnTextSize="14sp"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@color/gray_dddddd" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp8"
                        android:paddingLeft="@dimen/dp23"
                        android:text="用药频次："
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/tv_freq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@null"
                        android:gravity="start"
                        android:paddingBottom="@dimen/dp8"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp1"
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@color/gray_dddddd" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp20">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp8"
                        android:paddingLeft="@dimen/dp23"
                        android:text="用药方法："
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/tv_meth"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:background="@null"
                        android:gravity="start"
                        android:paddingBottom="@dimen/dp8"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:paddingTop="@dimen/dp15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:drawableLeft="@mipmap/money"
                        android:drawablePadding="@dimen/dp10"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15"
                        android:text="诊金"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_fee_off_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:padding="@dimen/dp3"
                        android:src="@mipmap/off" />
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_fees"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/dp8"
                        android:paddingLeft="@dimen/dp23"
                        android:paddingTop="@dimen/dp10"
                        android:text="免费"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <EditText
                        android:id="@+id/et_fees"
                        android:layout_width="@dimen/dp60"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp10"
                        android:gravity="center"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/sp15"
                        android:visibility="gone" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingBottom="@dimen/dp8"
                        android:paddingLeft="@dimen/dp23"
                        android:paddingTop="@dimen/dp10"
                        android:text="服务费"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp15" />

                    <TextView
                        android:id="@+id/service_charge"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp10"
                        android:gravity="center_vertical|right"
                        android:drawableRight="@mipmap/right"
                        android:paddingRight="@dimen/dp10"
                        android:text="请先添加药品  "
                        android:textColor="@color/gary_999999"
                        android:textSize="@dimen/sp15" />
                    <TextView

                        android:id="@+id/service_charge_check"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp10"
                        android:gravity="center_vertical|right"
                        android:drawableRight="@mipmap/right"
                        android:paddingRight="@dimen/dp10"
                        android:text="每付0元  "
                        android:textColor="#ce503f"
                        android:textSize="@dimen/sp15" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingTop="@dimen/dp15">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/dp15"
                        android:text="保密处方"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/iv_secrecy_off_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:src="@mipmap/off" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingLeft="@dimen/dp15"
                    android:text="(开启后,处方详细信息将会对患者隐藏）" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp10"
                    android:background="@color/white">

                    <Button
                        android:id="@+id/btn_evo"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp20"
                        android:layout_marginLeft="@dimen/dp30"
                        android:layout_marginRight="@dimen/dp30"
                        android:layout_marginTop="@dimen/dp20"
                        android:background="@drawable/radius_15_green"
                        android:text="立即开方"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp18" />
                </RelativeLayout>

            </LinearLayout>

            <ScrollView
                android:id="@+id/scroll_view"
                android:scrollbarThumbHorizontal="@color/b5b5b5"
                android:layout_marginTop="@dimen/dp80"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_zhi_flag"
                    android:paddingBottom="@dimen/dp15"
                    android:background="@drawable/radius_2_f2f2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>
            </ScrollView>
        </FrameLayout>
    </ScrollView>


</LinearLayout>