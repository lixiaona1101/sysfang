<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/person_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <ImageView
            android:id="@+id/person_head"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"/>


        <LinearLayout
            android:id="@+id/person_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp45"
            android:layout_toRightOf="@id/person_head"
            android:background="@drawable/water_raduis_left"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp10">

            <TextView
                android:id="@+id/person_contemn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/c_333333"
                android:textSize="@dimen/sp14"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/person_contemn_img_width"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp80"
                android:scaleType="fitCenter"
                android:src="@mipmap/more1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/person_contemn_img_height"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp120"
                android:src="@mipmap/more1"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/person_time"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_marginTop="@dimen/dp5"
            android:textSize="@dimen/sp10"
            android:layout_below="@+id/person_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/doctor_rela"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:id="@+id/doctor_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp45"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@id/doctor_head"
            android:background="@drawable/water_raduis_right"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:paddingTop="@dimen/dp10">

            <TextView
                android:id="@+id/doctor_content_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#212121"
                android:textSize="@dimen/sp14"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/doctor_content_img_width"
                android:layout_width="@dimen/dp120"
                android:layout_height="@dimen/dp80"
                android:scaleType="fitCenter"
                android:src="@mipmap/more1"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/doctor_content_img_height"
                android:layout_width="@dimen/dp80"
                android:layout_height="@dimen/dp120"
                android:src="@mipmap/more1"
                android:scaleType="fitCenter"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/doctor_time"
            android:textSize="@dimen/sp10"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp45"
            android:layout_marginTop="@dimen/dp5"
            android:layout_below="@+id/doctor_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/doctor_head"
            android:layout_width="@dimen/dp35"
            android:layout_height="@dimen/dp35"
            android:layout_alignParentRight="true" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sen_lin"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/send_time"
            android:layout_gravity="center"
            android:textSize="@dimen/sp10"
            android:layout_marginTop="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/dp10"
            android:background="@drawable/water_raduis_cen"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp25"
            android:paddingRight="@dimen/dp25"
            android:paddingTop="@dimen/dp10">


            <TextView
                android:id="@+id/send_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您向患者发送了"
                android:textColor="@color/gary_999999"
                android:textSize="@dimen/sp12" />

            <TextView
                android:id="@+id/send_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#db7f72"
                android:textSize="@dimen/sp12" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>