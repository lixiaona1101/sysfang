<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context="com.jiuhao.jhjk.fragment.main.MainPatientFragment">

    <EditText
        android:id="@+id/edit_patient"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp35"
        android:layout_margin="@dimen/dp10"
        android:background="@drawable/radius_7_hz_back"
        android:gravity="center"
        android:hint="输入姓名搜索患者"
        android:textColor="#888888"
        android:textSize="@dimen/sp14" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp95"
        android:layout_marginBottom="@dimen/dp15"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/welcome_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_9"
            android:gravity="center"
            android:paddingTop="@dimen/dp25"
            android:text="邀请患者"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/mass_texting_two"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_10"
            android:gravity="center"
            android:paddingTop="@dimen/dp25"
            android:text="群发消息"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/grouping_three"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_11"
            android:gravity="center"
            android:paddingTop="@dimen/dp25"
            android:text="分组管理"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

    </LinearLayout>

    <ListView
        android:id="@+id/list_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

    </ListView>

</LinearLayout>
