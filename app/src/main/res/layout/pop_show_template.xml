<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_back_f2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="分享"
            android:textSize="@dimen/sp14"
            android:textColor="@color/theme_color" />

        <ImageView
            android:id="@+id/iv_template_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dp10"
            android:src="@mipmap/delete" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_template_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="药品名字"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp20"
        android:paddingTop="@dimen/dp10">

        <TextView
            android:id="@+id/tv_template_share_wx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp5"
            android:drawableTop="@mipmap/wx"
            android:gravity="center"
            android:text="微信"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_template_share_py"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp5"
            android:drawableTop="@mipmap/pyq"
            android:gravity="center"
            android:text="朋友圈"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/tv_template_share_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dp5"
            android:drawableTop="@mipmap/share_code"
            android:gravity="center"
            android:text="二维码"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp14" />

    </LinearLayout>
</LinearLayout>

