<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_back_f2"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:drawableLeft="@mipmap/description"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:text="病症简述"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_symptom1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:hint="请输入病症描述"
                android:paddingBottom="@dimen/dp8"
                android:paddingLeft="@dimen/dp20"
                android:paddingTop="@dimen/dp17"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp14" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:drawableLeft="@mipmap/medical"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:text="药方信息"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/dp23"
                    android:paddingTop="@dimen/dp17"
                    android:text="处方剂型:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:id="@+id/tv_select_med_type1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:drawablePadding="@dimen/dp10"
                    android:drawableRight="@mipmap/right"
                    android:gravity="end"
                    android:text="选择处方剂型"
                    android:textColor="@color/yellow_d49e6a"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp1"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:background="#f2f2f2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <RelativeLayout
                    android:id="@+id/re"
                    android:layout_width="@dimen/dp100"
                    android:layout_height="@dimen/dp125"
                    android:layout_marginBottom="@dimen/dp15"
                    android:layout_marginLeft="@dimen/dp25"
                    android:layout_marginTop="@dimen/dp12"
                    android:background="@drawable/line_radius_2">

                    <RelativeLayout
                        android:id="@+id/img_photo_no"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible">

                        <ImageView
                            android:id="@+id/iv_add_med"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp30"
                            android:src="@mipmap/camera2" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_add_med"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp10"
                            android:text="添加处方"
                            android:textColor="#ce503f"
                            android:textSize="@dimen/sp14" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/img_photo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:visibility="gone" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/iv_delete_med"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/re"
                    android:src="@mipmap/delete"
                    android:visibility="gone" />

                <com.jiuhao.jhjk.view.RoundProgressBar
                    android:id="@+id/tasks_camera"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp45"
                    android:visibility="gone" />
            </RelativeLayout>


            <LinearLayout
                android:id="@+id/ll_working"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingLeft="@dimen/dp23"
                        android:paddingTop="@dimen/dp10"
                        android:text="加工辅料："
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_select_working"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawablePadding="@dimen/dp10"
                        android:drawableRight="@mipmap/right"
                        android:paddingBottom="@dimen/dp10"
                        android:paddingTop="@dimen/dp10"
                        android:text="请选择"
                        android:textColor="@color/yellow_d49e6a"
                        android:textSize="@dimen/sp16"
                        android:textStyle="bold" />
                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:visibility="visible"
                    android:id="@+id/word_info_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:drawableLeft="@mipmap/meth"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp15"
                android:paddingTop="@dimen/dp15"
                android:text="服药方式"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp16"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp10"
                    android:paddingLeft="@dimen/dp23"
                    android:paddingTop="@dimen/dp17"
                    android:text="付数:"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <com.jiuhao.jhjk.view.AmountView
                    android:id="@+id/av_num1"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp10"
                    app:btnTextSize="14sp"
                    app:btnWidth="36dp"
                    app:tvWidth="50dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@color/gray_dddddd" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp23"
                    android:text="用药频次："
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <EditText
                    android:id="@+id/tv_freq1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@null"
                    android:paddingBottom="@dimen/dp8"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp1"
                    android:layout_marginLeft="@dimen/dp10"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@color/gray_dddddd" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp23"
                    android:text="用药方法："
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <EditText
                    android:id="@+id/tv_meth1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@null"
                    android:paddingBottom="@dimen/dp8"

                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:paddingTop="@dimen/dp15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:drawableLeft="@mipmap/money"
                    android:drawablePadding="@dimen/dp10"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:text="诊金"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_fee_off_on1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@mipmap/off" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_fees1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp23"
                    android:paddingTop="@dimen/dp10"
                    android:text="免费"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <com.jiuhao.jhjk.view.RegionNumberEditText
                    android:id="@+id/et_fees1"
                    android:layout_width="@dimen/dp60"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="center"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/sp15"
                    android:visibility="gone" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp8"
                    android:paddingLeft="@dimen/dp23"
                    android:paddingTop="@dimen/dp10"
                    android:text="服务费"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp15" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:gravity="right"
                    android:paddingRight="@dimen/dp10"
                    android:text="由系统按照正常标准计算"
                    android:textColor="@color/gary_999999"
                    android:textSize="@dimen/sp13" />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp5"
                android:paddingTop="@dimen/dp15">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp15"
                    android:text="保密处方"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/iv_secrecy_off_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp10"
                    android:src="@mipmap/off" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp10"
                android:paddingLeft="@dimen/dp15"
                android:text="(开启后,处方详细信息将会对患者隐藏）" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:background="@color/white">

                <Button
                    android:id="@+id/btn_evo1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp20"
                    android:layout_marginLeft="@dimen/dp30"
                    android:layout_marginRight="@dimen/dp30"
                    android:layout_marginTop="@dimen/dp20"
                    android:background="@drawable/radius_15_green"
                    android:text="立即开方"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp18" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>