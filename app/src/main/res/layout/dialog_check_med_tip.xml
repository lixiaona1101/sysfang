<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/radius_12_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp20"
        android:layout_marginRight="@dimen/dp20"
        android:layout_marginTop="@dimen/dp20"
        android:background="@drawable/radius_12_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp1"
            android:background="@color/white"
            android:gravity="center"
            android:padding="@dimen/dp10"
            android:text="检测到处方包含“十八反、十九畏”药品"
            android:textColor="@color/text_sticker_red_easy_photos"
            android:textSize="@dimen/sp15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp1"
            android:layout_margin="@dimen/dp10"
            android:background="@color/gray_dddddd" />

        <com.jiuhao.jhjk.view.MyListView
            android:id="@+id/mlv_med_check_tip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@color/app_back"
            android:dividerHeight="@dimen/dp1" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginTop="@dimen/dp20"
        android:background="@color/gray_dddddd" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp1"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp10"
        android:text="确定按处方继续开方吗？"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sp15"
        android:textStyle="bold" />

    <include layout="@layout/button_two" />


</LinearLayout>