<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp75"
        android:background="#f2f2f2"
        android:paddingTop="@dimen/dp25">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:src="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="标题"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp19" />

        <ImageView
            android:id="@+id/tv_title_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp10"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:src="@mipmap/more2" />

    </RelativeLayout>

    <TextView
        android:id="@+id/fee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_below="@+id/rl_title"
        android:background="@color/orange"
        android:drawableRight="@mipmap/right1"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp15"
        android:paddingRight="@dimen/dp15"
        android:text="当前为免费问诊点这里设置问诊费用"
        android:textColor="@color/white"
        android:textSize="@dimen/sp14" />

    <RelativeLayout
        android:id="@+id/price_rela"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:background="@color/orange"
        android:paddingLeft="@dimen/dp15"
        android:visibility="visible">

        <TextView
            android:id="@+id/price_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="问诊费用:0元"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/delete_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@id/price_text"
            android:background="@drawable/radius_2_white"
            android:padding="@dimen/dp5"
            android:text="结束咨询"
            android:textColor="#ce503f"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:id="@+id/right_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingBottom="@dimen/dp10"
            android:paddingLeft="@dimen/dp50"
            android:paddingRight="@dimen/dp15"
            android:paddingTop="@dimen/dp10"
            android:src="@mipmap/right1" />

    </RelativeLayout>
    <!--item_dialogue-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_dialogue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp32"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/radius_9_016"
            android:gravity="center"
            android:text="继续服用"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />


        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/radius_9_016"
            android:gravity="center"
            android:text="提醒复诊"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />


        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/radius_9_016"
            android:gravity="center"
            android:text="更改用药"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />


        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:layout_marginRight="@dimen/dp5"
            android:layout_weight="1"
            android:background="@drawable/radius_9_016"
            android:gravity="center"
            android:text="新开处方"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/sen_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp50"
        android:layout_marginTop="@dimen/dp10"
        android:background="#f3f3f3">

        <ImageView
            android:id="@+id/more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp8"
            android:src="@mipmap/more" />

        <EditText
            android:id="@+id/mess_edit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/send_but"
            android:layout_toRightOf="@+id/more"
            android:background="@drawable/radius_50_fff"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5" />

        <Button
            android:id="@+id/send_but"
            android:layout_width="@dimen/dp55"
            android:layout_height="@dimen/dp30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/radius_15_green"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/more_lin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp100"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/picture_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:drawableTop="@mipmap/picture"
            android:gravity="center"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp16"
            android:text="图片"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/list_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp5"
            android:drawableTop="@mipmap/list"
            android:gravity="center"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp16"
            android:text="问诊单"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp12" />
    </LinearLayout>
</LinearLayout>