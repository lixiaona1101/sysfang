<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">

    <include layout="@layout/title" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/white"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/up_head"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/head"
            android:gravity="center_vertical"
            android:text="点击更换  "
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp12" />

        <ImageView
            android:id="@+id/head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/enroll_icon_selected" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/white"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dp10"
            android:layout_toLeftOf="@+id/woman"
            android:drawableLeft="@mipmap/select"
            android:text=" 男"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/woman"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableLeft="@mipmap/select1"
            android:text=" 女"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10" />

    <RelativeLayout
        android:id="@+id/administrative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:background="@color/white"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科室"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/right"
            android:text="未选择  "
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp14" />

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <RelativeLayout
        android:id="@+id/occupation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/white"
        android:padding="@dimen/dp20">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职称"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/right"
            android:text="未选择  "
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp14" />


    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1" />

    <RelativeLayout
        android:id="@+id/major"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:background="@color/white"
        android:padding="@dimen/dp20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专业标签"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/right"
            android:text="未选择标签  "
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp14" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp10" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp10"
        android:paddingLeft="@dimen/dp20"
        android:paddingTop="@dimen/dp20"
        android:text="医生个人简介"
        android:textColor="@color/c_333333"
        android:textSize="@dimen/sp16" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp140"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp20"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10">

        <EditText
            android:id="@+id/doctor_synopsis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp20"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:background="@null"
            android:hint="点击这里编辑简介内容..."
            android:inputType="textMultiLine"
            android:maxLength="300"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/now_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_toLeftOf="@+id/san"
            android:gravity="end"
            android:text="0"
            android:textColor="@color/gary_999999" />

        <TextView
            android:id="@+id/san"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:text="/300"
            android:textColor="@color/gary_999999" />
    </RelativeLayout>


</LinearLayout>