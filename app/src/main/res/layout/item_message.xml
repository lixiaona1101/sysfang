<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp60"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/person_head"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/dp15" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp45"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp5"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="患者名字"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp14" />

        <TextView
            android:id="@+id/person_conment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:text="最新的聊天信息最新的聊天信息"
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp45"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/dp15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:text="8月13日"
            android:textColor="@color/gary_999999"
            android:textSize="@dimen/sp12" />

        <LinearLayout
            android:id="@+id/not_read_lin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1">

            <TextView
                android:id="@+id/not_read_number"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp12"
                android:layout_gravity="center"
                android:background="@drawable/radius_10_circle"
                android:gravity="center"
                android:paddingLeft="@dimen/dp4"
                android:paddingRight="@dimen/dp4"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="@dimen/sp9"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>