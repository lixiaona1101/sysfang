<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.jiuhao.jhjk.activity.patient.PaySetActivity">

    <include layout="@layout/title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp25"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【患者名字】"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="远程问诊服务费为"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp16" />
    </LinearLayout>

    <EditText
        android:id="@+id/money"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp30"
        android:background="@null"
        android:gravity="center"
        android:hint="免费"
        android:inputType="number"
        android:textColor="#ce503f"
        android:textSize="@dimen/sp36" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp15"
        android:background="#f2f2f2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp25"
        android:layout_marginRight="@dimen/dp25"
        android:layout_marginTop="@dimen/dp25"
        android:text="说明:/n1.咨询费用设置后下次咨询时生效。/n2.设置服务费之后，患者下次必须先付费后才能咨询。/n3.设置服务费应根据患者自身能力进行设置。/n4.您主动发起的咨询服务，患者无需付费。/n5.咨询服务费在平台推广期全部归您所有。/n6.咨询服务费收取之后，服务时间应为24小时。您可以和患者沟通之后结束咨询服务，或者在您为患者处方之后，您来结束咨询服务。"
        android:textColor="@color/gray_666666"
        android:textSize="@dimen/sp12" />

    <TextView
        android:id="@+id/save_set"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp40"
        android:layout_marginLeft="@dimen/dp40"
        android:layout_marginRight="@dimen/dp40"
        android:layout_marginTop="@dimen/dp35"
        android:background="@drawable/radius_15_green"
        android:gravity="center"
        android:text="保存设置"
        android:textColor="@color/white"
        android:textSize="@dimen/sp18" />

</LinearLayout>
